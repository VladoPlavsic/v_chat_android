<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:requestLegacyExternalStorage="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VEssenger"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.VEssenger">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".authorization.LoginActivity"
            android:exported="true"
            android:label="VEssenger"
            android:theme="@style/Theme.VEssenger">
        </activity>

        <activity android:name=".authorization.OpenChatActivity"
            android:exported="true"
            android:label="VEssenger"
            android:theme="@style/Theme.VEssenger">
        </activity>

        <activity android:name=".chat.ChatClientActivity"
            android:exported="true"
            android:label="VEssenger"
            android:theme="@style/Theme.VEssenger">
        </activity>
    </application>

</manifest>